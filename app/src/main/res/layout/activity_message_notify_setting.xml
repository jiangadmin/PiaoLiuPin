<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray4"
    tools:context="com.sy.piaoliupin.ui.MessageNotifySettingActivity">

    <include layout="@layout/view_title_bar"/>

    <com.sy.piaoliupin.ui.LineControllerView
        android:id="@+id/messagePush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:isSwitch="true"
        app:name="@string/message_notify_push" />

    <com.sy.piaoliupin.ui.LineControllerView
        android:id="@+id/c2cMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isSwitch="true"
        app:name="@string/message_notify_c2c_music" />

    <com.sy.piaoliupin.ui.LineControllerView
        android:id="@+id/groupMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isBottom="true"
        app:isSwitch="true"
        app:name="@string/message_notify_group_music" />
</LinearLayout>
